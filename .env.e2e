# MasterSpeak AI - E2E Testing Environment Configuration
# This file contains environment variables specifically for E2E testing

# Application Environment
ENV=testing
NODE_ENV=development
DEBUG=false

# Database Configuration for E2E Testing
DATABASE_URL=sqlite:////app/test_data/masterspeak_test.db

# Security Keys for Testing (NOT for production)
SECRET_KEY=test-secret-key-for-e2e-testing-only
RESET_SECRET=test-reset-secret-for-e2e-testing-only
VERIFICATION_SECRET=test-verification-secret-for-e2e-testing-only

# JWT Configuration
JWT_LIFETIME_SECONDS=3600

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:8000

# Rate Limiting Configuration for E2E Testing
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=50/minute
RATE_LIMIT_AUTH=8/minute
RATE_LIMIT_ANALYSIS=15/minute
RATE_LIMIT_UPLOAD=10/minute
RATE_LIMIT_HEALTH=200/minute

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Health Check Configuration
HEALTHCHECK_DB=true
HEALTHCHECK_REDIS=true
HEALTHCHECK_OPENAI=false

# OpenAI Configuration (set externally or use mock)
# OPENAI_API_KEY=your-openai-api-key-here

# Playwright Configuration
CI=true
PLAYWRIGHT_BROWSERS_PATH=/ms-playwright

# Test User Accounts (for consistent testing)
TEST_DEMO_EMAIL=demo@masterspeak.ai
TEST_DEMO_PASSWORD=Demo123!
TEST_USER_EMAIL=test@playwright.com
TEST_USER_PASSWORD=Test123!

# Test Data Configuration
TEST_DATA_PATH=/app/test_data
TEST_DATABASE_RESET=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags for Testing
ENABLE_SIGNUP=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_RATE_LIMITING=true

# Timeout Configuration
REQUEST_TIMEOUT=30000
DATABASE_TIMEOUT=10000
TEST_TIMEOUT=60000

# Service URLs (for container communication)
BACKEND_URL=http://backend:8000
FRONTEND_URL=http://frontend:3000
REDIS_HOST=redis
REDIS_PORT=6379

# Mock Service Configuration (if needed)
MOCK_OPENAI=false
MOCK_EMAIL_SERVICE=true
MOCK_FILE_UPLOAD=false

# Performance Testing Limits
MAX_UPLOAD_SIZE=10485760
MAX_REQUEST_SIZE=52428800
MAX_CONCURRENT_REQUESTS=10

# Security Testing Configuration
ENABLE_SECURITY_HEADERS=true
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMIT_BYPASS=false