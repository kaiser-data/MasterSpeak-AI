# .env - Development settings

# Environment Configuration
ENV="development"
DEBUG=true

# Database Configuration
DATABASE_URL="sqlite:///./data/masterspeak.db"
# If using PostgreSQL, comment out above and uncomment below:
# DATABASE_URL="postgresql://postgres:password@localhost/masterspeak"

# API Keys
OPENAI_API_KEY="sk-your-local-test-key"  # Use a dummy or test key

# Security Configuration (these must be secret in prod!)
SECRET_KEY="dev-secret-key-please-change-this-in-prod"
RESET_SECRET="dev-reset-secret"
VERIFICATION_SECRET="dev-verification-secret"

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"

# JWT Configuration
JWT_LIFETIME_SECONDS=3600
