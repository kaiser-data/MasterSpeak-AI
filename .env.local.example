# MasterSpeak-AI Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Backend API Base URL
# Development: http://localhost:8000
# Production: https://your-backend-domain.railway.app
NEXT_PUBLIC_API_BASE=http://localhost:8000

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable transcription UI features (0=disabled, 1=enabled)
NEXT_PUBLIC_TRANSCRIPTION_UI=1

# Enable PDF export and sharing features (0=disabled, 1=enabled)
NEXT_PUBLIC_EXPORT_ENABLED=1

# Enable progress tracking dashboard (0=disabled, 1=enabled)
NEXT_PUBLIC_PROGRESS_UI=1

# Enable shareable analysis links (0=disabled, 1=enabled)
NEXT_PUBLIC_SHARE_LINKS=0

# Enable advanced analytics features (0=disabled, 1=enabled)
NEXT_PUBLIC_ADVANCED_ANALYTICS=0

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Frontend logging level (debug, info, warn, error)
NEXT_PUBLIC_LOG_LEVEL=info

# ============================================================================
# MONITORING & ANALYTICS (Optional)
# ============================================================================

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics ID
# NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX

# PostHog API Key for product analytics
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================

# Node environment (automatically set by Next.js)
# NODE_ENV=development

# Enable development debugging
# NEXT_PUBLIC_DEBUG=true

# ============================================================================
# VERCEL CONFIGURATION
# ============================================================================

# Vercel automatically provides these variables:
# - VERCEL_URL (deployment URL)
# - VERCEL_ENV (development, preview, production)
# - VERCEL_GIT_COMMIT_SHA
# - VERCEL_GIT_COMMIT_MESSAGE

# Custom Vercel configuration
# NEXT_PUBLIC_VERCEL_ENV=$VERCEL_ENV

# ============================================================================
# PRODUCTION OVERRIDES
# ============================================================================

# Production API base (set in Vercel environment variables)
# NEXT_PUBLIC_API_BASE=https://masterspeak-api.railway.app

# Production feature flags (typically enabled in production)
# NEXT_PUBLIC_TRANSCRIPTION_UI=1
# NEXT_PUBLIC_EXPORT_ENABLED=1
# NEXT_PUBLIC_PROGRESS_UI=1
# NEXT_PUBLIC_SHARE_LINKS=1
# NEXT_PUBLIC_ADVANCED_ANALYTICS=1

# Production logging (less verbose)
# NEXT_PUBLIC_LOG_LEVEL=warn

# ============================================================================
# TESTING CONFIGURATION
# ============================================================================

# Test environment overrides (used in CI/CD)
# NEXT_PUBLIC_API_BASE=http://localhost:8000
# NEXT_PUBLIC_LOG_LEVEL=error
# All feature flags typically disabled for testing